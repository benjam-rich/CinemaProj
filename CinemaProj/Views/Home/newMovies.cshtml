@{
    ViewBag.Title = "Enter New Movies HERE";
}

@model MovieModel

<!--Here is the form to add new movies. It redirects to the list of movies page upon submission-->
<form asp-action="newMovies" method="post">
    <div>
        <label asp-for="Category">Category: </label>
        <input asp-for="Category" />
    </div>
    <div>
        <label asp-for="Title">Title: </label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Year">Year: </label>
        <input asp-for="Year" />
    </div>
    <div>
        <label asp-for="Director">Director: </label>
        <input asp-for="Director" />
    </div>
    <div>
        <!--Here is a dropdown menu for the various ratings-->
        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating" >
        <option value="">Select One</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        </select>
    </div>
    <div>
        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" />
    </div>
    <div>
        <label asp-for="LentTo">Lent to: </label>
        <input asp-for="LentTo" />
    </div>
    <div>
        <label asp-for="Edited">Edited: </label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>
    <button type="submit">Submit New Movie</button>
    <div asp-validation-summary="All"></div>
</form>