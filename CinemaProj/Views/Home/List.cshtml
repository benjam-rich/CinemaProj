@{
    ViewBag.Title = "List o Movies";
}

@model IEnumerable<CinemaProj.Models.ApplicationResponse>

<!--This page displays all of the movies currently submitted (except Independence Day)-->
<div>
    <h2>Here are all the movies currently in the collection</h2>
    <!--This is the table with the proper headers containing all fo the movies currently in memory-->
    <table>
        <thead>
            <th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent-to:</th><th>Notes</th>
        </thead>

        <tbody>
            @foreach (CinemaProj.Models.ApplicationResponse x in Model)
            {
                <tr>
                    <td>@x.Category</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>
                </tr>
            }
        </tbody>
    </table>
</div>
