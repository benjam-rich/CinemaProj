
@model MovieViewModel
<h2>Movie List</h2>
<!--This page iterates through each of the items in the table referenced through the IEnumerable in the View Model-->
<div>
    <table class="table table-dark table-hover">
        <thead>
            <tr><th>Category </th><th> Title </th><th> Year </th><th> Director  </th><th> Rating</th><th> Edited </th><th> Lent to </th><th> Notes </th></tr>
        </thead>
        <tbody>
            @foreach (var x in Model.Movie)

            {
            @if (x.Title.ToLower() != "independence day")
                {
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td>
                    <!--Buttons to edit and remove items currently in the database-->
                    <form method="post" asp-action="List">
                        <button class="btn btn-group-sm btn-secondary" type="submit" name="movieId" value="@x.MovieId">Edit</button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-action="MovieDelete">
                        <button class="btn btn-group-sm btn-danger" type="submit" name="movieDeleteId" value="@x.MovieId">Delete</button>
                    </form>
                </td>
            </tr>

                }

            }
        </tbody>

    </table>
</div>