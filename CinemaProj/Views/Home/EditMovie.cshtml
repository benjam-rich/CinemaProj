@model MovieViewModel

<h1>Edit Movie</h1>

@foreach (var x in Model.Movie) //setting the value to what was passed in earlier and then updating the responses
{
    <form asp-action="EditMovie" method="post">
        <div>
            <label asp-for="MovieModel.Category">Category:</label>
            <input asp-for="MovieModel.Category" value="@x.Category" required />
        </div>
        <br />
        <div>
            <label asp-for="MovieModel.Title">Title:</label>
            <input asp-for="MovieModel.Title" value="@x.Title" required />
        </div>
        <br />
        <div>
            <label asp-for="MovieModel.Year">Year:</label>
            <input asp-for="MovieModel.Year" value="@x.Year" required />
        </div>
        <br />
        <div>
            <label asp-for="MovieModel.Director">Director Name:</label>
            <input asp-for="MovieModel.Director" value="@x.Director" required />
        </div>
        <br />
        <div>
            <label asp-for="MovieModel.Rating">Rating:</label>
            <select asp-for="MovieModel.Rating" value="@x.Rating" required>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
        <br />
        <div>
            <label asp-for="MovieModel.Edited">Edited:</label>
            <select asp-for="MovieModel.Edited" value="@x.Edited">
                <option value="True">Yes</option>
                <option value="False">No</option>
            </select>
        </div>
        <br />
        <div>
            <label asp-for="MovieModel.LentTo">Lent To:</label>
            <input asp-for="MovieModel.LentTo" value="@x.LentTo" />
        </div>
        <br />
        <div>
            <label asp-for="MovieModel.Notes">Notes:</label><br />
            <textarea rows="5" maxlength="25" asp-for="MovieModel.Notes" value="@x.Notes"></textarea>
        </div>
        <br /><br />
        <div asp-validation-summary="All"></div>
        <button type="submit" name="movieIdentity" value="@x.MovieId">Submit</button>
    </form>
}

